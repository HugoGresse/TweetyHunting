<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/icon_about"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_cat_alone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/icon_about"
        android:id="@+id/developedby_title"
        android:layout_centerHorizontal="true"
        android:text="â‚¬" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/developedby_title"
        android:id="@+id/me_textview"
        android:text="@string/about_me"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/text_title" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/using_title"
        android:text="@string/using"
        android:textSize="@dimen/text_subtitle"
        android:textAllCaps="true"
        android:layout_below="@+id/me_textview"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginBottom="@dimen/activity_horizontal_margin_small"
        android:layout_alignLeft="@+id/me_textview"
        android:layout_alignStart="@+id/me_textview" />



</RelativeLayout>